@import '_settings'

blue = #78BAE2
bordersize = 2px
borderdist = -10px
maxwidth = 1200px
normalize()
base()

body
    background blue
    color white
    font-family DIN-Light
    padding-bottom 20px

a
    text-decoration none

#wrapper
    position relative
    max-width 1100px
    margin 0px auto


.image-bg
    width 200%
    height 200%
    position absolute
    top -50%
    left -50%

    img
        min-width 50%
        min-height 50%
        position absolute
        top 25%
        left 25%

.borderwrap
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    box-sizing border-box

.borders
    box-sizing border-box
    padding 0px
    position relative
    height 100%
    margin-bottom 20px
    div
        background white
        position absolute
        z-index 10
    .l,.r
        width bordersize
        background white
        position absolute
        top 15px
        bottom borderdist

    .l
        left -20px

    .r
        right -20px

    .t,.b
        border-bottom bordersize solid white
        left -20px
        right -20px
        height bordersize
        padding 0
        box-sizing border-box

    .t
        top 15px

    .b
        bottom borderdist

h1
    font-family: ClarendonLTStd;
    font-size: 102px;
    color: #FFFFFF;
    line-height: 122px;
    text-shadow: 1px 2px 0px #000000;
    margin-bottom: 0

h2
    font-family: DIN-Light;
    font-size: 56px;
    color: #FFFFFF;
    line-height: 68px;
    

h3
    font-family: DIN-Light
    font-size: 34px
    color: #FFFFFF
    margin-top: 0
    line-height: 52px

.section
    background-size cover
    background-position center center
    width 100%
    overflow hidden
    position relative
    padding 0 80px 30px 80px
    box-sizing border-box

    a
        color white


.wrap, header, .borders
    max-width maxwidth
    margin 0px auto


.upper
    text-transform uppercase

.small
    font-family DIN-Light
    font-size 18px


.button
    background white
    font-family DIN-Bold
    font-size 29px
    color blue
    padding 20px 23px 19px 23px
    text-transform uppercase
    display inline-block
    margin-right 25px
    text-decoration none

    &.white
        color blue

    &.small
        padding 0
        background transparent
        font-family DIN-Light
        font-size 18px
        position relative
        bottom 3px

        &:hover
            border-bottom 1px solid white


.wrap
    padding 0 50px
    box-sizing border-box

.leader
    padding-top 150px

#headwrap
    padding 0 25px
    padding-top 26px
    position absolute 
    top 0
    left 0
    width 100%
    box-sizing border-box
    z-index 10

header
    border-bottom 2px solid white
    box-sizing border-box
    width 100%
    text-align center
    position relative
    clearfix()


    nav
        position absolute
        bottom 30px

        &.left
            left 50%
            margin-left -500px
        &.right
            right 50%
            margin-right -540px

        a
            margin 0 15px
            color white
            text-shadow 1px 1px 0 rgba(0,0,0,.5)
            font-size 24px
            font-family DIN-Regular

    h1
        text-indent -9999px
        display inline-block
        width 474px
        margin-bottom 0
        margin-top 0
        height 106px
        background url(../img/logos.png) center center no-repeat
        border-left 2px solid white
        border-right 2px solid white


